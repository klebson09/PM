<html lang="pt">
<head>
  <meta charset="UTF-8">
  <title>SAGP | Cadastro Cliente</title>
  <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
  <!-- Bootstrap 3.3.2 -->
  <link href="bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
  <!-- Font Awesome Icons -->
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
  <!-- Theme style -->
  <link href="dist/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />
  <!-- iCheck -->
  <link href="plugins/iCheck/square/blue.css" rel="stylesheet" type="text/css" />
  <link href="css/style_multiform.css" rel="stylesheet">
  <style>
  /* Tooltip */
  .tooltipStyle + .tooltip > .tooltip-inner {
    background-color: #449d44;
    color: #FFFFFF;
    border: 1px solid green;
    padding: 10px;
    font-size: 14px;
  }
  /* Tooltip on left */
  .tooltipStyle + .tooltip.left > .tooltip-arrow {
    border-left: 5px solid black;
  }
  </style>
</head>
<body class="register-page">
  <div class="row">
    <form id="msform" action="/cadastro_cliente" method="post" name="f1">
      <!-- progressbar -->
      <div class="col-sm-offset-3 col-xs-offset-3 col-md-offset-4">
	      <ul id="progressbar">
	        <li class="active">Informações Pessoais</li>
	        <li>Conta</li>
	      </ul>
      </div>
      <!-- fieldsets -->
      <fieldset>
        <!-- <div class="box box-success"> -->
        <h2 class="fs-title">Informações Pessoais e de Contato</h2>
        <!-- <h3 class="fs-subtitle">This is step 1</h3> -->
        <div class="row">
          <div class="col-md-12">
            <div  class="radio-inline ">
              <label>
                <input type="radio" name="tipoPessoa" id="pessoaFisica" class="" value="F"  onchange="handleRadioTipoPessoa(this)" checked >Pessoa Física
              </label>
            </div>
            <div  class="radio-inline">
              <label>
                <input type="radio" name="tipoPessoa" id="pessoaJuridica" class="minimal-red" onchange="handleRadioTipoPessoa(this)" value="J">Pessoa Jurídica
              </label>
            </div>
          </div>
        </div>
        <div class="form-group col-md-3 ">
          <input type="text" class="form-control validar cpf_cnpj" id="cpf_cnpj" name="cpf_cnpj" placeholder="CPF" />
        </div>
        <!-- col-md-offset-1 -->

        <div class="form-group  col-md-9 ">
          <input type="text" class="form-control validar" name="nomeCliente" placeholder="Nome Completo" />
        </div>

        <div class="form-group col-md-6">
          <input type="text" class="form-control" id="telefone" max="13" name="telefone" placeholder="Telefone" />
        </div>
        <div class="form-group col-md-6">
          <input type="text" class="form-control" max="14" id="celular" name="celular" placeholder="Celular"/>
        </div>
        <div class="form-group col-md-12">
          <input  id="email" type="email" class="form-control emailValidar"  maxlength="60"  data-placement="left" title="E-mail"  name="email" placeholder="E-mail"/>
        </div>
        <!-- <div class="form-group col-md-12">
          <input  id="hangouts" type="email" class="form-control tooltipStyle emailValidar" onblur="validarEmail(this, 'gmail.com', false)" maxlength="60" data-toggle="tooltip" data-placement="left" title="Deve ser um email do Gmail"  name="hangouts" placeholder="Hangouts"/>
        </div> -->

        <!-- <div class="form-group col-md-6">
          <input id="skype"  type="text" class="form-control tooltipStyle emailValidar" maxlength="60"  name="skype"  placeholder="Skype" onblur="validarEmail(this, 'outlook.com', false)" data-toggle="tooltip" data-placement="bottom" title="Deve ser um email do Outlook" />
        </div> -->

        <input type="button" name="proximo" class=" next action-button btn  btn-success" value="Próximo" align="center"/>
        <br/><br/>
        <% if(validacao.length > 0 ){%>
          <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><i class="icon fa fa-ban"></i> Alert!</h4>
            <ul>
              <% for(var i=0; i < validacao.length; i++){ %>
                <li> <%=validacao[i].msg %>
                  <% } %>
                </ul>

              </div>
              <% } %>

              <!-- </div> -->
            </fieldset>
            <fieldset>
              <h2 class="fs-title">Conta</h2>
              <div class="form-group col-md-12 ">
                <input id="emailLabel" type="text" class="form-control validar"  placeholder="Email" readonly="true" />
              </div>
              <!-- <div class="col-md-12 "> -->
              <div class="form-group col-md-6">
                <input id="senha" type="password" class="form-control validar validarSenha" name="senha" placeholder="Senha" />
              </div>
              <div class="form-group col-md-6">
                <input id="csenha" type="password" class="form-control validar validarSenha" name="csenha" placeholder="Confirme a Senha" />
              </div>
              <!-- </div> -->
              <input type="button" name="Anterior" class="previous action-button   btn  btn-success" value="Anterior" />
              <!-- <input type="submit" name="Pronto" class="submit action-button" value="Cadastrar" /> -->
              <input type="button" name="Pronto" class="submit action-button btn  btn-success" value="Cadastrar" />
            </fieldset>
          </form>
          <div id="msg"></div>


          <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js" type="text/javascript"></script>
          <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
          <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
          <!-- jQuery easing plugin -->
          <script src="http://thecodeplayer.com/uploads/js/jquery.easing.min.js" type="text/javascript"></script>
          <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.0/jquery.mask.js"></script>
          <script src="js/script_multiform.js" type="text/javascript"></script>
          <script src="js/valida_cpf_cnpj.js" type="text/javascript"></script>
          <script>

          function handleRadioTipoPessoa(radio){
            var tipoPessoa = radio.value;
            console.log(radio.value);
            if(tipoPessoa == 'F'){
              var $cpf = $("#cpf_cnpj");
              $cpf.val('');
              $cpf.mask('000.000.000-00', {reverse: false});
              $cpf.attr("placeholder","CPF");
            } else if(tipoPessoa == 'J'){
              var $cnpj = $("#cpf_cnpj");
              $cnpj.val('');
              $cnpj.mask('00.000.000/0000-00', {reverse: false});
              $cnpj.attr("placeholder","CPNJ");
            }
          }


          function selecionar(valor_check_input) {
            console.log("o/o/oo/");
            console.log(valor_check_input.checked);
            var valor_input = valor_check_input.checked;
            var id_do_input = valor_check_input.id;
            console.log(id_do_input);
            switch(id_do_input) {
              case "check_1":
              if (valor_input === true) {
                var x= document.getElementById("div_1").style.border = "solid 2px #4cae4c";
              }else{
                var x= document.getElementById("div_1").style.border = "solid 0px #ddd";
                // var a =document.getElementsByClassName("corVerde").style.color = "#ddd";
              }
              break;
              case "check_2":
              if (valor_input === true) {
                var x= document.getElementById("div_2").style.border = "solid 2px #4cae4c";

              }else{
                var x= document.getElementById("div_2").style.border = "solid 0px #ddd";
              }
              break;
              case "check_3":
              if (valor_input === true) {
                var x= document.getElementById("div_3").style.border = "solid 2px #4cae4c";

              }else{
                var x= document.getElementById("div_3").style.border = "solid 0px #ddd";
              }
              break;
            }
            break;
          }
          //Máscaras dos campos
          $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
            var $cpf = $("#cpf_cnpj");
            $cpf.mask('000.000.000-00', {reverse: false});

            var $telefone = $("#telefone");
            $telefone.mask('(00)0000-0000', {reverse: false});

            var $celular = $("#celular");
            $celular.mask('(00)00000-0000', {reverse: false});
          });
          </script>
          <!-- jQuery -->

        </body>
        </html>
