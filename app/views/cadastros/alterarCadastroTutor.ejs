         <div id="erroModal" class="modal modal-danger fade-in" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Atenção</h5>
                    </div>
                    <div class="modal-body" id="msgsErro">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline pull-right" data-dismiss="modal">Fechar</button>
                    </div>
                </div>
            </div>
        </div>   


        <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-md-offset-2 col-md-8">
              <div class="box box-success">

                <form id="formAlterarDadosTut" action="/alterar_dados_tutor" method="post" >
                  <!-- fieldsets -->
                  <fieldset>
                    <!-- <div class="box box-success"> -->
                    <h2 class="fs-title col-md-offset-1" id="tituloForm" style="padding-bottom: 20px;">  Dados Cadastrais do Tutor</h2>
                    <!-- <h3 class="fs-subtitle">This is step 1</h3> -->

                    <div class="form-group  col-md-12 ">
                      <label for="nomeUsuario">Nome</label>
                      <input type="text" id="nomeUsuario" name="nomeUsuario" class="form-control"  value="<%= dadosUsuario.nomeUsuario %>" required />
                    </div>


                    <div class="form-group  col-md-12 ">
                      <label for="cpf">CPF</label>
                      <input type="text" id="cpf" name="cpf_cnpj" class="form-control" value="<%= dadosUsuario.cpf_cnpj %>" required />
                    </div>
                    <div class="form-group col-md-12">
                      <label for="telefone">Telefone</label>
                      <input type="text" id="telefone" name="telefone" class="form-control" value="<%= dadosUsuario.telefone %>"  />
                    </div>
                    <div class="form-group col-md-12">
                      <label for="celular">Celular</label>
                      <input type="text" id="celular" name="celular" class="form-control" value="<%= dadosUsuario.celular %>"  />
                    </div>
                    <div class="form-group col-md-12">
                      <label for="email">E-mail</label>
                      <input type="text" id="email" name="email" class="form-control" value="<%= dadosUsuario.email %>" required />
                    </div>  
                    <div class="col-md-12" style="margin-bottom: 2%"><h4>Dados Educacionais</h4></div>     
                    <div class="form-group col-md-12">
                      <label for="instEnsinoUsuario">Instituição de Ensino</label>
                      <input type="text" id="instEnsinoUsuario" name="instituicaoEnsino" class="form-control" value="<%= dadosUsuario.instituicaoEnsino %>" required />
                    </div> 
                    <div class="form-group col-md-12">
                      <label for="siapeUsuario">SIAPE</label>
                      <input type="text" id="siapeUsuario" name="siape" class="form-control" value="<%= dadosUsuario.siape %>" required />
                    </div> 
                    <div class="form-group col-md-12">
                      <label for="formacaoAcademicaUsuario">Formação Acadêmica</label>
                      <input type="text" id="formacaoAcademicaUsuario" name="formacaoAcademica" class="form-control" value="<%= dadosUsuario.formacaoAcademica %>" required />
                    </div> 
                    <div class="form-group col-md-12">
                      <label for="cargo">Cargo</label>
                      <select id="cargo" name="cargo" class="form-control" value="<%= dadosUsuario.cargo %>">
                          <option value="Professor">Professor</option>
                          <option value="Gestor">Gestor</option>
                          <option value="AlunoVeterano">Aluno Veterano</option>
                          <option value="Outros">Outros</option>
                      </select>
                    </div> 

                    <input type="hidden" name="idContato" value="<%= dadosUsuario.idContato %>" />
                    <input type="hidden" name="idDadosEducacionaisTutor" value="<%= dadosUsuario.idDadosEducacionaisTutor %>" />

              
                    <div class="form-group col-md-12">
                      <input type="button" id="btnAlterarDados"  class="submit action-button btn  btn-success col-md-offset-5" value="Enviar" onclick="alertAlterarDados()" />
                    </div>
                  </div>

                </div>


              </fieldset>

            </form>

            <input type="hidden" id="cargoSelect" value="<%= dadosUsuario.cargo %>" />

            <a id="askAlterarDados" href="#" data-toggle="modal" data-target="#alterarDadosModal"></a> 
             <a id="erroModalLink" href="#" data-toggle="modal" data-target="#erroModal"></a> 
