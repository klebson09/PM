    <script>
      var obj = JSON.parse('[{ "id": "1", "name": "Matheus Levi Barouh dos Santos", "email": "matheuslevibarouh@gmail.com", "tipoUsuario": "Dev" },'+
      '{ "id": "2", "name": "Klebson Leonardo Santana", "email": "klebsonleornardo@gmail.com", "tipoUsuario": "Dev" },'+
      '{ "id": "3", "name": "Ramide Sales Augusto Dantas", "email": "ramidedantas@gmail.com", "tipoUsuario": "Tutor" }]');

      var objSelecionados = [];




      function retirarMembro(e){
        objSelecionados.splice(objSelecionados.findIndex(obj => obj.id==e),1);
        zerarTabelaMembros();
        atualizarTabelaMembros();
      }

      function atualizarTabelaMembros(){
        if(objSelecionados.length > 0){
          $.each(objSelecionados, function(key,value){
                  if(value.tipoUsuario == "Tutor"){
                    $("#tabelaMembrosCorpo").append('<tr><td>'+value.name+'</td><td>'+value.email+'</td><td><span class="badge bg-blue">'+value.tipoUsuario+'</span></td></td></tr>');
                  }else{
                    $("#tabelaMembrosCorpo").append('<tr><td>'+value.name+'</td><td>'+value.email+'</td><td><span class="badge bg-red">'+value.tipoUsuario+'</span></td></td></tr>');
                  }
          });
        } else {
            $("#tabelaMembrosCorpo").append('<tr><td colspan="3"">Adicione membros na sua equipe</td></tr>');
        }

      }

      function zerarTabelaMembros(){
        var tabelaMembrosCorpo = document.getElementById("tabelaMembrosCorpo");

        while(tabelaMembrosCorpo.hasChildNodes()){
          tabelaMembrosCorpo.removeChild(tabelaMembrosCorpo.lastChild);
        }

        $("#tabelaMembrosCorpo").append('<tr><th>Nome</th><th>Email</th><th style="width: 40px">Função</th></tr>');

      }

    </script>

