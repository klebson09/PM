                                <td><%= checkpoints[i].observacoes %></td>
                                <td><span class="glyphicon glyphicon-remove" onclick="removerLinha(<%= i+1 %>)"></span></td>
                              </tr>
                              <%

                                if(!statusFinalizados){
                                  continue;
                                } else{
                                  if(checkpoints[i].status != "Finalizado"){
